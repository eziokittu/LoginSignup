<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Sign Up"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:text="Enter your phone number to sign up" />

        <TextView
            android:id="@+id/id_signup_countrytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:fontFamily="@font/mulish_extrabold"
            android:text="COUNTRY"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="@dimen/dimen_login_bottom"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/id_signup_country"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dim_login_email"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="@dimen/dim_login_email" />


        </LinearLayout>

        <TextView
            android:id="@+id/id_signup_labeltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:fontFamily="@font/mulish_extrabold"
            android:text="LABEL"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="@dimen/dimen_login_bottom"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_signup_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dim_login_email"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="@dimen/dim_login_email"
                android:fontFamily="@font/mulish_semibold"
                android:hint="ENTRY"
                android:inputType="text" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_signup_continuebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/mulish_extrabold"
            android:text="CONTINUE"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.1"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:background="#CCCCCC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_signup_image_facebook"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/image_facebook"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/id_signup_buttonfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/mulish_semibold"
                android:text="CONTINUE WITH FACEBOOK" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="50dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_signup_image_twitter"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/image_twitter"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/id_signup_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/mulish_semibold"
                android:text="CONTINUE WITH TWITTER" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>