<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:color="@android:color/darker_gray"
            android:foregroundGravity="center"
            android:minWidth="100dp"
            android:minHeight="100dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.5"
            android:src="@drawable/loginpageimage"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:fontFamily="@font/mulish_extrabold"
            android:text="EMAIL"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="@dimen/dimen_login_bottom"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_login_email_icon"
                app:srcCompat="@drawable/envelope"
                app:tint="@color/gray" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_login_email"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="@dimen/dim_login_email"
                android:fontFamily="@font/mulish_semibold"
                android:hint="@string/res_login_email"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:fontFamily="@font/mulish_extrabold"
            android:text="PASSWORD"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="50dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_login_email_icon"
                app:srcCompat="@drawable/lock"
                app:tint="@color/gray" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/id_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_login_email"
                android:layout_marginRight="@dimen/dim_login_email"
                android:layout_marginBottom="@dimen/dim_login_email"
                android:fontFamily="@font/mulish_semibold"
                android:hint="********"
                android:inputType="textPassword" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/mulish_extrabold"
            android:text="@string/login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_login_text_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="@dimen/dimen_top"
            android:layout_marginRight="@dimen/dimen_right"
            android:fontFamily="@font/mulish_semibold"
            android:gravity="center"
            android:text="@string/res_login_signup" />

    </LinearLayout>
</RelativeLayout>